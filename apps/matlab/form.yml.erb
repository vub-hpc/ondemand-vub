---
cluster: "*"

# app-specific attributes
attributes:
  bc_num_hours:
    label: "Number of hours"
    widget: "number_field"
    value: 12
    min: 1
    max: 120
    step: 1
  matlab_version:
    label: "MATLAB version"
    widget: "select"
    options:
      - ["MATLAB/2024a-r6", "2024a-r6"]
      - ["MATLAB/2024a-r3", "2024a-r3"]
      - ["MATLAB/2023a-r6", "2023a-r6"]
      - ["MATLAB/2022a-r5", "2022a-r5"]

form:
  - auto_queues
  - matlab_version
  - global_num_cores
  - bc_num_slots
  - global_bc_num_gpu_slots
  - bc_num_hours
  - global_working_dir
  - global_prerun
  - global_advanced
  - global_advanced_max_wait
  - bc_email_on_started
