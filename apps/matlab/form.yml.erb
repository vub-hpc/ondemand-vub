---
# app-specific attributes
attributes:
  bc_num_hours:
    label: "Number of hours"
    widget: "number_field"
    value: 12
    min: 1
    max: 120
    step: 1
  matlab_version:
    label: "MATLAB version"
    widget: "select"
    options:
      - ["MATLAB/2024a-r6", "2024a-r6"]
      - ["MATLAB/2023a-r6", "2023a-r6"]
      - ["MATLAB/2022a-r5", "2022a-r5"]
<%= ERB.new(File.read(File.join(File.dirname(__FILE__), "../common_files/_extra_attributes.yml.erb")), eoutvar: "@cluster").result(binding) %>

form:
  - cluster
  - auto_queues
  - matlab_version
  - global_num_cores
  - dynamic_num_gpu_slots
  - global_bc_num_shards
  - bc_num_hours
  - global_working_dir
  - global_prerun
  - bc_email_on_started
