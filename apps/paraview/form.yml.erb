---
# app-specific attributes
attributes:
  bc_num_hours:
    label: "Number of hours"
    widget: "number_field"
    value: 4
    min: 1
    step: 1
  bc_vnc_idle: 0
  bc_vnc_resolution:
    required: true
  desktop: "xfce"
  resolution:
    widget: "select"
    label: "Screen resolution"
    options:
      - ["FullHD (1920x1080)", "1920x1080"]
      - ["HD (1280x720)", "1280x720"]
  toolchain:
    label: "Toolchain and ParaView version"
    widget: "select"
    options:
      - ["2025a: ParaView/6.0.1", "2025a"]
      - ["2024a: ParaView/5.13.2", "2024a"]
      - ["2023a: ParaView/5.11.2", "2023a"]
<%= ERB.new(File.read(File.expand_path("../common_files/extra_attributes.yml.erb", __dir__)), eoutvar: "@common_attrs").result(binding) %>

form:
  - cluster
  - desktop
  - toolchain
  - resolution
  - bc_vnc_idle
  - global_num_cores
  - dynamic_num_gpu_slots
  - global_bc_num_shards
  - bc_num_hours
  - global_working_dir
  - global_prerun
  - bc_email_on_started
  - global_advanced
  - auto_queues
  - global_advanced_num_nodes
