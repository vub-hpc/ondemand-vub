---
cluster: "*"

# app-specific attributes
attributes:
  bc_num_hours:
    label: "Number of hours"
    widget: "number_field"
    value: 12
    min: 1
    max: 120
    step: 1
  toolchain:
    label: "Toolchain and R version"
    widget: "select"
    options:
      - ["2023a: RStudio-Server/2023.12.1+402 + R/4.3.2", "2023a"]
      - ["2022a: RStudio-Server/2022.07.2+576 + R/4.2.1", "2022a"]
  r_bundle_cran:
    label: "Load R-bundle-CRAN module for additional packages"
    widget: "check_box"
    checked_value: "yes"
  r_bundle_bioconductor:
    label: "Load R-bundle-Bioconductor module for additional packages"
    widget: "check_box"
    checked_value: "yes"
  clean_workspace:
    label: "Clean workspace at startup"
    widget: "check_box"
    checked_value: "yes"
    help: |
      Note: user preferences take priority over this option.

form:
  - auto_queues
  - toolchain
  - r_bundle_cran
  - r_bundle_bioconductor
  - global_num_cores
  - bc_num_slots
  - global_bc_num_gpu_slots
  - bc_num_hours
  - global_working_dir
  - global_prerun
  - clean_workspace
  - global_advanced
  - global_advanced_max_wait
  - bc_email_on_started
