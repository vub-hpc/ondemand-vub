---
# app-specific attributes
attributes:
  bc_num_hours:
    label: "Number of hours"
    widget: "number_field"
    value: 4
    min: 1
    step: 1
  toolchain:
    label: "Toolchain and R version"
    widget: "select"
    options:
      - ["2024a: RStudio-Server/2024.12.0+467 + R/4.4.2", "2024a"]
      - ["2023a: RStudio-Server/2023.12.1+402 + R/4.3.2", "2023a"]
      - ["2022a: RStudio-Server/2022.07.2+576 + R/4.2.1", "2022a"]
    help: |
      R-bundle-CRAN and R-bundle-Bioconductor are loaded by default.
  clean_workspace:
    label: "Clean workspace at startup"
    widget: "check_box"
    checked_value: "yes"
    unchecked_value: "no"
    help: |
      Note: user preferences take priority over this option.
<%= ERB.new(File.read(File.expand_path("../common_files/_extra_attributes.yml.erb", __dir__)), eoutvar: "@common_attrs").result(binding) %>

form:
  - cluster
  - auto_queues
  - toolchain
  - global_num_cores
  - dynamic_num_gpu_slots
  - global_bc_num_shards
  - bc_num_hours
  - global_working_dir
  - global_prerun
  - clean_workspace
  - bc_email_on_started
