---
# app-specific attributes
attributes:
  bc_num_hours:
    label: "Number of hours"
    widget: "number_field"
    value: 12
    min: 1
    max: 120
    step: 1
  toolchain:
    label: "Toolchain and Python version"
    widget: "select"
    options:
      - ["2024a: Python/3.12.3 + JupyterLab/4.2.5", "2024a"]
      - ["2023a: Python/3.11.3 + JupyterLab/4.2.1", "2023a"]
      - ["2022a: Python/3.10.4 + JupyterLab/3.5.0", "2022a"]
    help: |
      SciPy-bundle and matplotlib are loaded by default.
  load_dask:
    label: "Load the dask module (+ Lab extension)"
    widget: "check_box"
    checked_value: "yes"
    unchecked_value: "no"
  load_molecules:
    label: "Load the nglview and py3Dmol modules (+ Lab extensions)"
    widget: "check_box"
    checked_value: "yes"
    unchecked_value: "no"
<%= ERB.new(File.read(File.expand_path("../common_files/_extra_attributes.yml.erb", __dir__)), eoutvar: "@common_attrs").result(binding) %>

form:
  - cluster
  - auto_queues
  - toolchain
  - load_dask
  - load_molecules
  - global_num_cores
  - bc_num_slots
  - dynamic_num_gpu_slots
  - global_bc_num_shards
  - bc_num_hours
  - global_working_dir
  - global_prerun
  - bc_email_on_started
