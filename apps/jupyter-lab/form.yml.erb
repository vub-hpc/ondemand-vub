---
cluster: "*"

# app-specific attributes
attributes:
  bc_num_hours:
    label: "Number of hours"
    widget: "number_field"
    value: 12
    min: 1
    max: 120
    step: 1
  toolchain:
    label: "Toolchain and Python version"
    widget: "select"
    options:
      - ["2023a: Python/3.11.3 + JupyterLab/4.2.1", "2023a"]
      - ["2022a: Python/3.10.4 + JupyterLab/3.5.0", "2022a"]
  load_scipy:
    label: "Load the SciPy-bundle module"
    widget: "check_box"
    checked_value: "yes"
    unchecked_value: "no"
  load_matplotlib:
    label: "Load the matplotlib module (+ Lab extension)"
    widget: "check_box"
    checked_value: "yes"
    unchecked_value: "no"
  load_dask:
    label: "Load the dask module (+ Lab extension)"
    widget: "check_box"
    checked_value: "yes"
    unchecked_value: "no"
  load_molecules:
    label: "Load the nglview and py3Dmol modules (+ Lab extensions)"
    widget: "check_box"
    checked_value: "yes"
    unchecked_value: "no"

form:
  - auto_queues
  - toolchain
  - load_scipy
  - load_matplotlib
  - load_dask
  - load_molecules
  - global_num_cores
  - bc_num_slots
  - global_bc_num_gpu_slots
  - bc_num_hours
  - global_working_dir
  - global_prerun
  - global_advanced
  - global_advanced_max_wait
  - bc_email_on_started
