---
cluster: "*"

# app-specific attributes
attributes:
  bc_num_hours:
    label: "Number of hours"
    widget: "number_field"
    value: 12
    min: 1
    max: 120
    step: 1
  toolchain:
    label: "Toolchain and TensorBoard version"
    widget: "select"
    options:
      - ["2023a: tensorboard/2.15.1-gfbf-2023a", "2023a"]
      - ["2022a: tensorboard/2.10.0-foss-2022a", "2022a"]
  working_dir:
    label: TensorBoard log directory
    help: |
      - Optionally select your TensorBoard log directory.
      - The default is your <i>data</i> directory (<code>$VSC_DATA</code>) when left empty.
    widget: "path_selector"
    show_files: false

form:
  - auto_queues
  - toolchain
  - global_num_cores
  - bc_num_slots
  - global_bc_num_gpu_slots
  - bc_num_hours
  - working_dir
  - global_prerun
  - global_advanced
  - global_advanced_max_wait
  - bc_email_on_started
